{
    "name": "opis/string",
    "description": "A standalone library for manipulating UTF-8 strings",
    "keywords": ["opis", "string", "utf-8", "multi-byte", "string manipulation"],
    "homepage": "http://opis.io",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Marius Sarca",
            "email": "marius.sarca@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },
    "autoload": {
        "psr-4": {
            "Opis\\String\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Opis\\String\\Test\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.2.x-dev"
        }
    }
}
